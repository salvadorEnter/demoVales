{% extends "index.html.twig" %}

{% block content %}
    <div class="thumbnail idm-consent">
        {% include 'logo.html.twig' %}
        <section class="content">
            <h3>{{ 'Remove access for application'|trans }}</h3>
            {% if are_scopes_empty %}
                <p>
                    {{ 'You are about to remove authorization for the application "%client%" to act on behalf of your users.'|raw|trans({'%client%': client}) }}
                </p>
            {% else %}
                <p>
                    {{ 'You are about to remove authorization for the application "%client%" to act on behalf of your users with the following permissions:'|raw|trans({'%client%': client}) }}
                <ul>
                    {% for scope in scopes %}
                        <li> {{ scope }} </li>
                    {% endfor %}
                </ul>
                </p>
            {% endif %}
            <p>{{ 'Do you want to remove this access?'|trans }}<br/><br/></p>
        </section>
        <nav class="nav tcenter">
            <a href="{{ path('adminConsentRemoveCancel') }}" id="consent_cancel_btn" tabindex="5" track="click:external_login">
                <button class="btn btn-secondary">{{ 'No, Thanks'|trans }}</button>
            </a>
            <a href="{{ path('adminConsentRemoveFinish') }}" id="consent_continue_btn" track="click:consent_">
                <button class="btn btn-primary">{{ 'Remove access'|trans }}</button>
            </a>
        </nav>
    </div>
{% endblock %}