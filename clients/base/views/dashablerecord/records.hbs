<div class="tab-pane active">
    {{#if collection.dataFetched}}
        {{#each collection.display_columns}}
            <table class="table table-striped dataTable">
                <thead>
                    <tr>
                        {{#each fields}}
                            <th class="{{#isSortable ../module this}}sorting sorting_{{#eq ../../../collection.orderBy.field name}}{{../../../../collection.orderBy.direction}}{{/eq}} orderBy{{name}}{{/isSortable}}{{#if widthClass}} {{widthClass}}{{/if}}"
                            {{#if styles}} style="{{styles}}"{{/if}}
                            {{#if name}} data-fieldname="{{name}}"{{/if}} data-orderby="{{orderBy}}">
                                <span>{{str label ../module}}</span>
                            </th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody>
                    {{#each ../collection.models}}
                        <tr class="single"{{#if id}} data-id="{{id}}"{{/if}}>
                            {{#each ../fields}}
                                <td{{#if align}} class="{{align}}"{{/if}}{{#if name}} data-fieldname="{{name}}"{{/if}}>{{field ../../../this model=../this template='list'}}</td>
                            {{/each}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{/each}}
        {{#unless collection.length}}
            {{partial 'nodata' this}}
        {{/unless}}
    {{/if}}
</div>
