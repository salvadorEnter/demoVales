<div class="filter-box">
    {{#eq tabs.length 1}}
        <h1>
            {{tabs.0.tabLabel}}
        </h1>
    {{else}}
        {{#each tabs}}
            <button class="btn stageButton {{#eq ../value moduleField}}selected{{/eq}}" data-pipeline="{{moduleField}}" name="pipelineBtn">
                {{tabLabel}}
            </button>
        {{/each}}
    {{/eq}}
</div>
